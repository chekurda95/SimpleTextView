    <style name="FirstLineStyle">
        <item name="android:text">First line string</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_launcher_foreground</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="SecondLineStyle">
        <item name="android:text">Second line string</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="EmptyTitleStyle">
        <item name="android:text">Title string</item>
    </style>

    <style name="EmptyFirstLineStyle">
        <item name="android:text">First line string</item>
    </style>

    <style name="EmptySecondLineStyle">
        <item name="android:text">Second line string</item>
    </style>

</resources>