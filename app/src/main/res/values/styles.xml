<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SbisTextViewDefaultTheme">
        <item name="android:text">Title test</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SimpleTextViewStyle">
        <item name="android:text">SimpleTextView Some Text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:text">Title string</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxLines">10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="FirstLineStyle">
        <item name="android:text">First line string</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="SecondLineStyle">
        <item name="android:text">Second line string</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="EmptyTitleStyle">
        <item name="android:text">Title string</item>
    </style>

    <style name="EmptyFirstLineStyle">
        <item name="android:text">First line string</item>
    </style>

    <style name="EmptySecondLineStyle">
        <item name="android:text">Second line string</item>
    </style>

    <style name="MetricsTitleStyle">
        <item name="android:text">Title string</item>
        <item name="android:textSize">15dp</item>
        <!--<item name="android:textColor">@color/black</item>-->
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textAppearance">@style/SbisTextViewTextAppearance</item>
    </style>

    <style name="SbisTextViewTextAppearance">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="MetricsActivityTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="sbisTextViewTheme">@style/MetricsActivitySbisStyle</item>
    </style>

    <style name="MetricsActivitySbisStyle">
        <item name="android:text">Title111</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

