<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SimpleTextViewStyle">
        <item name="android:text">SimpleTextView Some Text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:text">Title string</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxLines">10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:enabled">true</item>
        <item name="android:visibility">visible</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

